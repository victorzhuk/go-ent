run:
  timeout: 5m
  modules-download-mode: readonly
  go: "1.25"

linters:
  enable:
    - errcheck
    - gosimple
    - govet
    - ineffassign
    - staticcheck
    - unused
    - gofmt
    - goimports
    - misspell
    - unconvert
    - gocritic
    - revive
    - bodyclose
    - noctx
    - gosec
    - prealloc
    - copyloopvar

linters-settings:
  goimports:
    local-prefixes: {{.ModulePath}}
  
  gocritic:
    enabled-tags:
      - diagnostic
      - style
      - performance
    disabled-checks:
      - ifElseChain
      - octalLiteral
  
  revive:
    rules:
      - name: exported
        severity: warning
        disabled: false
      - name: blank-imports
        severity: warning
      - name: context-as-argument
        severity: warning
      - name: error-return
        severity: warning
      - name: error-strings
        severity: warning
      - name: error-naming
        severity: warning
      - name: var-declaration
        severity: warning

issues:
  exclude-rules:
    - path: _test\.go
      linters:
        - gosec
        - gocritic
    - path: internal/domain/
      linters:
        - revive
      text: "exported"
  
  max-issues-per-linter: 50
  max-same-issues: 10
