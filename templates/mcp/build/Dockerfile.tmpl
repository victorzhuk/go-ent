# Build stage
FROM golang:1.25.5-trixie AS builder

ARG VERSION=local
ARG VCS_REF=unknown
ENV GOOS=linux
ENV GOARCH=amd64

WORKDIR /app

# Install bash-static
RUN apt-get update && apt-get install -y bash-static && rm -rf /var/lib/apt/lists/*

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build
RUN VERSION=${VERSION} make build

# Runtime stage
FROM gcr.io/distroless/static-debian13:nonroot

WORKDIR /app

# Copy bash for entrypoint flexibility
COPY --from=builder /bin/bash-static /usr/bin/bash

# Copy binary
COPY --from=builder /app/bin/{{PROJECT_NAME}} /{{PROJECT_NAME}}

ENTRYPOINT ["/usr/bin/bash"]
CMD ["-c", "/{{PROJECT_NAME}}"]
